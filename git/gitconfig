[user]
	email = xianmin12@gmail.com
	name =  Chen Xianmin
[push]
    default = matching
[core]
	editor = code --wait
    excludesfile = ~/.gitignore

# 参考：https://gist.github.com/pksunkara/988716

[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = "code --wait "
